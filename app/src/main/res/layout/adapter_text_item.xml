<?xml version="1.0" encoding="utf-8"?>
<com.daliammao.widget.swipelayoutlib.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:swipe_show_mode="pull_out"
    app:swipe_drag_edge="right"
    android:id="@+id/swipe"
    android:orientation="vertical">

    <TextView
        android:background="@android:color/holo_orange_light"
        android:id="@+id/explosion"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="一键成为魔法少女"
        android:gravity="center" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="60sp"
        android:gravity="center" />
</com.daliammao.widget.swipelayoutlib.SwipeLayout>